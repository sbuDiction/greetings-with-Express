  <!-- this is the header section-->
  <div class="container">
    <div class="row">
      <div class="col-12">
        <ul class="nav nav-tabs">
          <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/greeted">Greeted</a>
          </li>
          <li class="nav-item">
            {{!-- <a class="nav-link" href="/counter">Counter</a> --}}
          </li>
          <li class="nav-item">
            {{!-- <a class="nav-link" href="/counter/user">Users</a> --}}
          </li>
        </ul>
        <h3 style="padding-left: ">
          Greetings<small class="text-muted">With Express js</small>
        </h3>
        <form action="/greet" method="post">
          <div class="row">
            <div class="col-6">
              <div class="form-label-group usernameInput">
                <input class="form-control" id="input" type="text" name="nameInput" autofocus="" required name=un>
                <label for="text"></label>
                <span class="badge badge-dark">Enter</span>
                <span class="badge badge-warning">name</span>
                <span class="badge badge-success">to</span>
                <span class="badge badge-danger">Greet</span>
              </div>

            </div>

            <div class="col-6 language">
              <select class="custom-select custom-select-sm" name="language" name=un>

                <option value="">Select Language</option>
                {{#each dropdown}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
              <div class="form-label-group usernameInput">
                <label for="text"></label>
                <span class="badge badge-dark">Select</span>
                <span class="badge badge-warning">language</span>
                {{!-- <span class="badge badge-success">to</span> --}}
                {{!-- <span class="badge badge-danger">Greet</span> --}}
              </div>
            </div>
            <div style="padding-left: 1%;padding-top:4%" class="col-6-sm">
              <button class="btn btn-outline-success d-flex justify-content-between" id="collectData" type="submit">

                Greet
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <form action="/delete" method="get">
      <div class="row" style="padding-top: 1%;padding-bottom: 2%;padding-left: 40%">
        <div class="col-6-sm">
          <button class="btn btn-outline-danger" type="submit">
            Reset app
          </button>
        </div>
      </div>
    </form>
    {{!-- display section --}}
    <div class="">
      <div id="greet" style="display: none;lert alert-primary" class="greetMsg" role="alert">
        <span style="padding-left: 39%">{{name}}</span>
      </div>
      <div id="alert" style="display: none;lert alert-primary" class="red" role="alert">
        <span style="padding-left: 35%">{{messages.reset}}</span>
      </div>
      <div id="warning" style="display: none;lert alert-primary" class="warning"e="alert">
        <span style="padding-left: 35%">{{messages.info}}</span>
      </div>
    </div>
    {{!-- footer section --}}
    <div class="fixed-bottom">
      <div class="card text-center">
        <h5 class="card-title">Number of people greeted</h5>
        {{!-- <p class="card-text">Counter: {{counter}}</p> --}}
        <button type="button" class="btn btn-primary">
          Counter <span class="badge badge-light">{{count}}</span>
          <span class="sr-only">unread messages</span>
        </button>
        <p class="card-text">
          <small class="text-muted">Greeted names counter</small>
        </p>
      </div>
    </div>
