<body class="p-3 mb-2 bg-white text-dark">

    <div class="container">
        <div style="padding-left: 20%" class="row">
            <div class="co12">
                <h3>
                    People Greeted List
                    <small class="text-muted">Click the name to get more info</small>
                </h3>

                <table class="table table-sm table-dark">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Names</th>
                            <th>greeted</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allnames}}
                        <tr class="bg-success">
                            <td><i class="fas fa-angle-double-right"></i></td>
                            <td><a href="/user/{{name}}" name="client" class="badge badge-primary">{{this.name}}</a>
                            </td>
                            <td>greeted <i style="color: Dodgerblue" class="fas fa-check"></i></td>

                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>

    </div>
